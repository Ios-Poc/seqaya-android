<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <ImageView
               android:id="@+id/product_image"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:src="@drawable/water_6"
               android:layout_weight="2"
               android:scaleType="centerCrop"
               />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/product_manufacturer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="المصنع" />
                <TextView
                    android:id="@+id/bottle_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bottle size"/>
                <TextView
                    android:id="@+id/number_in_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No. of bottles in the package"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price"/>
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:id="@+id/decrease"
                        android:src="@drawable/ic_remove_circle"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                    <TextView
                        android:id="@+id/number_of_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:lines="1"
                        android:text="5" />
                    <ImageButton
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:id="@+id/increase"
                        android:src="@drawable/ic_add_circle"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_to_cart"
            android:text="اضافة الي العربة"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</android.support.v7.widget.CardView>