<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="370dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <view
        android:layout_marginTop="160dp"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginHorizontal="16dp"/>
    <view
        android:layout_marginTop="300dp"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginHorizontal="16dp"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
<TextView
    android:layout_width="115dp"
    android:layout_height="30dp"
    android:hint="Shipment No."
    android:textSize="16sp"
    />
        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:hint="Order Date"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:text="Track order"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="309487657654"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:id="@+id/order_id"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="31 ,jun ,2018"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:id="@+id/order_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/inprossisng_image"
            android:background="@drawable/ic_checked"/>
        <ViewAnimator
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:background="@color/colorgreen"
            android:layout_gravity="center"
            android:id="@+id/first_peace">
        </ViewAnimator>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/shipped_image"
            android:background="@drawable/ic_checked"
            />
        <ViewAnimator
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:background="@color/colorgreen"
            android:layout_gravity="center"
            android:id="@+id/second_peace">
        </ViewAnimator>
        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/deliverd_image"
            android:background="@drawable/ic_checked"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="15dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="15dp"
            android:text="inProccessing"
            android:textSize="13sp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:text="shipped"
            android:textSize="13sp"
            /><TextView
        android:layout_width="125dp"
        android:layout_height="15dp"
        android:text="Deliverd"
        android:textSize="13sp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_delivery_truck"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/expected_delivery"
            android:layout_gravity="center_vertical"
            tools:text="expected delivery in sunday 24,8,2019"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="78dp"
            android:id="@+id/product_image"
            android:background="@drawable/water_6"
            />
        <TextView
            android:layout_width="285dp"
            android:layout_height="68dp"
            android:id="@+id/product_discription_in_history"
            tools:text="INFINIX NOTE3 ,16GB RAM,16MB front CAM 55GB BackCam"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="235dp"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="34dp">
        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="34dp"
            android:hint="Status"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginTop="270dp"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="29dp">
        </LinearLayout>
        <TextView
            android:layout_width="77dp"
            android:layout_height="34dp"
            android:text="Deliverd"
            android:textSize="20dp"
            android:textColor="@color/colorgreen"
            android:id="@+id/checked_state"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="68dp"
            android:text="Order details"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/order_details_text"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_right_arrow"
            android:layout_gravity="center"
            android:id="@+id/right_arrow"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>